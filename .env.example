# ===========================================
# DrugQuery RAG - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# -----------------
# LLM API Keys
# -----------------
ANTHROPIC_API_KEY=sk-ant-api03-...
OPENAI_API_KEY=
# Optional: OpenAI for embeddings comparison
# OPENAI_API_KEY=sk-...

# -----------------
# LangSmith Observability
# -----------------
LANGCHAIN_API_KEY=lsv2_pt_...
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=drugquery-rag

# -----------------
# Weaviate Vector Store
# -----------------
WEAVIATE_HOST=localhost
WEAVIATE_PORT=8080
# Leave empty for local anonymous access
WEAVIATE_API_KEY=

# -----------------
# Application Settings
# -----------------
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Environment: development, staging, production
ENVIRONMENT=development

# -----------------
# Model Configuration
# -----------------
# Main generation model
LLM_MODEL=claude-sonnet-4-20250514

# Fast/cheap model for query expansion, guardrails
LLM_MODEL_FAST=claude-3-haiku-20240307

# Embedding model (local)
EMBEDDING_MODEL=BAAI/bge-base-en-v1.5

# Reranking model (local)
RERANK_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# -----------------
# RAG Configuration
# -----------------
# Chunking
CHUNK_MAX_TOKENS=512
CHUNK_OVERLAP_TOKENS=50

# Retrieval
RETRIEVAL_INITIAL_K=20
RETRIEVAL_FINAL_K=5
HYBRID_SEARCH_ALPHA=0.7

# -----------------
# API Configuration
# -----------------
API_HOST=0.0.0.0
API_PORT=8000
